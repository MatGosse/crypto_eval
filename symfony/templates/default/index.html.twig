{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block stylesheets %}
    <style>
        *{
            padding: 0px;
            margin: 0px;
            color: #efefef;
        }

        .flex{
            display: flex;
        }
        .wrap{
            flex-wrap: wrap;
        }
        .column{
            flex-direction: column;
        }
        .column-r{
            flex-direction: column-reverse;
        }

        .x-center{
            justify-content: center;
        }
        .x-start{
            justify-content: start;
        }
        .x-end{
            justify-content: end;

        }
        .x-space-b{
            justify-content: space-between;
        }
        .x-space-a{
            justify-content: space-around;
        }
        .x-space-e{
            justify-content: space-evenly;
        }
        
        .y-center{
            align-items: center;
        }
        .y-start{
            align-items: start;
        }
        .y-end{
            align-items: end;
        }


        body{
            background-color: #100f0f;
        }
        .container{
            width: 80%;
            margin: 0px auto;
        }
        
        nav{
            background-color: #100f0f;
            z-index: 100;
            border-bottom : 1px solid rgb(239,239,239);
            width: 100%;
            height: 50px;
            position: fixed;
            top: 0px;
            left: 0px;
        }
        nav ul{
            list-style: none;
        }
        header{
            background: red;
            margin-top: 50px;
            aspect-ratio: 2.5;
            min-width: 100%;
            max-height: 400px;
        }
         
        #transaction-list{
            list-style: none;
        }
        #transaction-list img{
            height: 25px;
        }
        #transaction-list form{
            width: 100%;
        }
        #transaction-list li{
            padding: 0px 15px;
            height: 50px;
            border-bottom: 1px solid rgb(239,239,239);
        }
        #transaction-list li:last-child{
            border-bottom: none;
        }
        .transaction-viewed{
            transition: 0.75s;
            background-color: rgb(239,239,239);
        }
        .transaction-viewed p{
            color: #100f0f;
        }
    </style>
{% endblock %}

{% block nav %}
    <ul class="flex">
        <li><a href="/add">add</a></li>
        <li><a id="link-edit" href="/delete?id={{ data_wallet[0].id }}">edit</a></li>
    </ul>
{% endblock %}

{% block body %}
    
    <header class="flex x-center y-center">
        <input id='value-viewer' value={{data_wallet[0].currentValue - data_wallet[0].InitialValue}} />
    </header>
    <div class="container">
        <ul id="transaction-list">
            {% for exanges in data_wallet %}
                <li class="flex y-center" onClick=changeViewTransaction(event)>
                    <form class="flex x-space-b y-center">
                        <input type="hidden" value="{{ exanges.currentValue - exanges.InitialValue }}" readonly/>
                        <input type="hidden" value="{{ exanges.amount }}" readonly/>
                        <input type="hidden" value="{{ exanges.id }}" readonly/>
                        <div class="flex y-center">
                            <img src ="uploads/{{ exanges.Currency.Images.Name }}" />
                            <p>{{ exanges.Currency.Slug }} ({{ exanges.Currency.Name }})</p>
                        </div>
                        <button>sqd</button>
                    </form>
                </li>
            {% endfor %}
        </ul>
    </div>
    <script>
        document.querySelector('#transaction-list li:first-child').classList.add('transaction-viewed');
        
        let changeViewTransaction = (event)=>{
            document.querySelector('.transaction-viewed').classList.remove('transaction-viewed');
            event.currentTarget.classList.add('transaction-viewed');

            document.getElementById('value-viewer').value = event.currentTarget.children[0].children[0].value;
            document.getElementById('link-edit').setAttribute("href", "/delete?id=" + event.currentTarget.children[0].children[2].value);
        }
    </script>
{% endblock %}
