{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block nav %}
    <a href="../"> <img src="{{ asset('/img/picto/cancel.png') }}"/></a>
{% endblock %}

{% block body %}
<style>{{source('@css/form.css')}}</style>


<div class="container container-form flex x-center y-center">
    {{ form_start(form) }}
        <div class="flex y-center">
            <img src="{{ asset('/img/picto/search.png') }}" />
            {{ form_widget(form.wallet  ) }}
        </div>
        <div class="flex y-center">
            <img src="{{ asset('/img/picto/quantityIcon.png') }}" />
            {{ form_widget(form.amount) }}
        </div>
        <div class="submit-contain flex x-center y-center">
            {{ form_widget(form.valider) }}
        </div>
    {{ form_end(form) }}
</div>
<script>
    let params = new URLSearchParams(window.location.search);
    if(params.has('id')){
        let array = document.getElementById('remove_wallet_form_wallet').children;
        
        for (let i = 0; i < array.length; i++) {
            if(array[i].value== params.get('id')){
                document.getElementById('remove_wallet_form_wallet').value = params.get('id');
            }
        }
        
        
    }
</script>
{% endblock %}
